{
  "name": "Codex-agent Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  // Installs common build tools and updates pip/setuptools/wheel before requirements
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential && pip install --upgrade pip setuptools wheel && pip install -r requirements.txt",
  "postAttachCommand": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false",
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ],
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1"
  }
}